<view>
    <view class="navigator-view">
        <view class="navigator-left" bindtap="goBack">
            <image class="wx-image_SC1alK2" mode="aspectFill" src="/images/return.png"/>
        </view>
        <image class="logo-image" mode="aspectFit" src="/images/waterlily.jpeg"/>
        <view class="navigator-right">
            <image class="wx-image_SC1alK2" mode="aspectFill" src="/images/cart.png"/>
        </view>
    </view>
    <view class="c-minheight wx-scroll-view_MBKQjG" lower-threshold="50" scroll-y="True" style="overflow-x: hidden; overflow-y:auto;"
                 upper-threshold="50">
        <view class="listitemWrap" wx:for="{{recommends}}">
            <navigator url="../detail/detail?id={{item.goodLink}}">
                <swiper class="image_thumbView" hover-class="navigator-hover">
                    <swiper-item wx:for="{{item.images}}">
                        <image class="image_thumb" mode="aspectFit" src="{{item}}"/>
                    </swiper-item>
                </swiper>
                <text class="text_description" style="font-size:28rpx">{{item.title}}</text>
                <text class="text_description" style="font-size:24rpx">{{item.description}}</text>
            </navigator>
            <view class="bottomGrayboder listitemInfoWrap">
                <!--<view class="likeinfo">-->
                    <!--<image class="likebtn" src="http://qty83k.creatby.com/materials/origin/c5656ef00d38d89eae437c5a9102f8fa_origin.png"/>-->
                    <!--<text class="c-block likeinfo_count">1</text>-->
                <!--</view>-->
                <text class="listitem_creattime">2016.10.29</text>
            </view>
        </view>
    </view>
</view>