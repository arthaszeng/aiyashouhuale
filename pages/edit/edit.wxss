.user-summary-view {
    font-size:28rpx;
    padding: 30rpx 20rpx;
    border-bottom: 1rpx solid #D9D9D9;
}

.age-constellation {
    margin-top: 5rpx;
    margin-bottom: 10rpx;
}

.age-male {
    float:left;
    font-size: 20rpx;
    margin-right:10rpx;
    padding: 3rpx 20rpx;
    border-radius: 10rpx;
    background-color: #7ae4ff;
}

.constellation {
    font-size: 20rpx;
    padding: 3rpx 20rpx;
    border-radius: 10rpx;
    background-color: #ffd6ab;
    width:60rpx;
    margin-left:70rpx;
}

.tips {
    font-size: 24rpx;
    color: #737373;
}

.icon-right {
    width: 10rpx;
    height: 16rpx;
    position: absolute;
}

.image-container {
    margin: 10rpx;
    display: flex;
    flex-direction: column;
}

.line-1 {
    flex: 2;
    width: 100%;
    display: flex;
    margin-bottom: 10rpx;
}

.line-2 {
    flex: 1;
    width: 100%;
    display: flex;
}

.image-1 {
    flex: 2;
    background-color: #f2f2f2;
    margin-right: 10rpx;
}

.image-2-and-3 {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.image {
    background-color: #f2f2f2;
    flex: 1;
}

.input-box {
    ffloat:left;
    position:relative;
    margin-right:9px;
    margin-bottom:9px;
    width:77px;
    height:77px;
    border:1px solid #D9D9D9;
}

.input-box:after,
.input-box:before{
    content:" ";
    position:absolute;
    top:50%;
    left:50%;
    -webkit-transform:translate(-50%, -50%);
    transform:translate(-50%, -50%);
    background-color:#D9D9D9;
}